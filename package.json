{
  "name": "esy-react-cli",
  "version": "2.0.2",
  "description": "Transform your React development workflow with this lightning-fast CLI tool that empowers you to launch production-ready apps in seconds. Seamlessly scaffold modern React applications with zero configuration, powered by battle-tested templates and optional AI assistance. Perfect for developers who value clean architecture and rapid deployment without the bloat. Stop wrestling with setupâ€”start building.",
  "main": "./index.js",
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,json,py,rs}\"",
    "prebuild": "rm -rf dist",
    "build": "esbuild ./bin/index.js --minify --bundle --platform=node --target=node18 --outfile=dist/index.js",
    "link": "bash ./scripts/bundle.sh -- --link",
    "publish": "bash ./scripts/publish.sh",
    "bundle": "bash ./scripts/bundle.sh",
    "p": "node ./bin/index.js project",
    "h": "node ./bin/index.js hook",
    "c": "node ./bin/index.js component",
    "page": "node ./bin/index.js page",
    "sw": "node ./bin/index.js service-worker",
    "cs": "node ./bin/index.js content-script",
    "ctx": "node ./bin/index.js context"
  },
  "bin": {
    "esy-react": "./index.js",
    "esyr": "./index.js"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "fs-extra": "^10.0.0",
    "inquirer": "^8.2.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "esbuild": "^0.23.1",
    "prettier": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tmburt04/esy-react.git"
  },
  "homepage": "https://github.com/tmburt04/esy-react/wiki",
  "bugs": {
    "url": "https://github.com/tmburt04/esy-react/issues"
  },
  "keywords": [
    "React",
    "ReactJS",
    "esbuild",
    "scss",
    "fontawesome",
    "typescript",
    "CRA",
    "create-react-app",
    "react-app",
    "react-scripts"
  ],
  "author": "timmichaelburton@gmail.com",
  "license": "MIT"
}
